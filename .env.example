# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=email_rag
DB_PORT=5433
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/email_rag

# ==========================================
# Backend Configuration
# ==========================================
PORT=4000
NODE_ENV=development

# ==========================================
# Admin Account (Default Login)
# ==========================================
# These credentials will be used to seed the initial admin user
ADMIN_EMAIL=admin@emailrag.com
ADMIN_PASSWORD=admin123456  # CHANGE THIS IMMEDIATELY!

# ==========================================
# Security Configuration
# ==========================================
# JWT Secret for session management (min 32 chars)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Encryption Key for sensitive data (AES-256)
# Must be exactly 32 bytes (64 hex characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# ==========================================
# AI Configuration (Choose at least ONE)
# ==========================================

# Option 1: Google Gemini (Recommended - Best Speed/Quality)
GEMINI_API_KEY=your_gemini_api_key_here

# Option 2: OpenAI (Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Option 3: Ollama (Local LLM - Privacy Focused)
# Ensure Ollama is running (ollama serve)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ==========================================
# Google OAuth (for Gmail Integration)
# ==========================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:4000/oauth2/callback

# ==========================================
# Agent Configuration
# ==========================================
# Master switch to run background agents
RUN_AGENTS=true
# How often agents run (in minutes)
AGENT_INTERVAL_MINUTES=5

# ==========================================
# Email Sync Configuration
# ==========================================
# Enable automatic email syncing via cron
ENABLE_EMAIL_SYNC_CRON=true
# Sync schedule (Cron expression)
# "0 * * * *" means every hour
EMAIL_SYNC_CRON_SCHEDULE="0 * * * *"
# Sync immediately when server starts
RUN_SYNC_ON_STARTUP=true
