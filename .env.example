# Backend Environment Variables

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=email_rag
DB_PORT=5433
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/email_rag

# Backend Configuration
PORT=4000
NODE_ENV=development

# Admin Account (for seed script)
# Run 'npm run seed:admin' after migrations to create admin user
ADMIN_EMAIL=admin@emailrag.com
ADMIN_PASSWORD=admin123456  # CHANGE THIS IMMEDIATELY!

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars

# Agent Configuration
RUN_AGENTS=true
AGENT_INTERVAL_MINUTES=5

# OpenAI Configuration
# Used for LangChain multi-agent system, embeddings, and email classification
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:4000/oauth2/callback

# Encryption
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
